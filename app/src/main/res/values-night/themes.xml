<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimpleMessages" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>

        <item name="android:colorBackground">@color/black_900</item>
        <item name="colorSurface">@color/black_800</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/white_50</item>

        <!-- CircleImageViewBorder-->
        <item name="civ_border_color">?attr/colorPrimary</item>
        <item name="civ_border_width">4dp</item>

        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

    </style>

    <style name="OutlinedEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">25dp</item>
        <item name="boxCornerRadiusBottomStart">25dp</item>
        <item name="boxCornerRadiusBottomEnd">25dp</item>

        <item name="hintTextColor">@color/white_50</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorSurface</item>
    </style>
</resources>