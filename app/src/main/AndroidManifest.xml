<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gulderbone.simple_messages">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleMessages">
        <activity android:name="com.gulderbone.simple_messages.messages.LatestMessagesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gulderbone.simple_messages.registerlogin.RegisterActivity"/>
        <activity android:name="com.gulderbone.simple_messages.registerlogin.LoginActivity" />
        <activity android:name="com.gulderbone.simple_messages.messages.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gulderbone.simple_messages.messages.LatestMessagesActivity" />
        </activity>
        <activity android:name="com.gulderbone.simple_messages.chat_log.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gulderbone.simple_messages.messages.LatestMessagesActivity" />
        </activity>
    </application>

</manifest>